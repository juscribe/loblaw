  width: 20px;
  height: 15px;
  top: 3px;
  margin-right: 10px;
  position: relative;
  display: inline-block;
}
.roundtrip-icon{
  background: transparent url("<%= image_path('roundtrip.png') %>") no-repeat top left;
  width: 20px;
  height: 15px;
  top: 3px;
  margin-right: 10px;
  position: relative;
  display: inline-block;
}
[class*="rating-"]{
  background: transparent url("<%= image_path('ratingStar.png') %>") no-repeat top center;
  width: 85px;
  height: 16px;
  display: inline-block;
  text-indent: -9999px;
  margin: 0 auto;
}

/*page-navigation*/
.page-navigation{
  margin: 20px 0;
  list-style: none;
  background: #404040; /* Old browsers */
  background: -moz-linear-gradient(top,  #404040 0%, #060c08 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#404040), color-stop(100%,#060c08)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #404040 0%,#060c08 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #404040 0%,#060c08 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #404040 0%,#060c08 100%); /* IE10+ */
  background: linear-gradient(to bottom,  #404040 0%,#060c08 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#404040', endColorstr='#060c08',GradientType=0 ); /* IE6-9 */

  -webkit-border-radius: 10px;
  border-radius: 10px;
  -webkit-box-shadow:  0px 0px 1px 1px rgba(100, 100, 100, 0.1);
  box-shadow:  0px 0px 1px 1px rgba(100, 100, 100, 0.1);
}

.page-navigation li{
  display: inline-block;
}

.page-navigation li a{
  color: #fff;
  display: inline-block;
  padding: 8px 20px;
}
.page-navigation li.back-button{
  border-right: 1px solid #060c08;
}

